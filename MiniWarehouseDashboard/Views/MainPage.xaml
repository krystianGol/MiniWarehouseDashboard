<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             xmlns:dxga="clr-namespace:DevExpress.Maui.Gauges;assembly=DevExpress.Maui.Gauges"
             xmlns:viewmodel="clr-namespace:MiniWarehouseDashboard.ViewModels"
             xmlns:local="clr-namespace:MiniWarehouseDashboard.Converters"
             x:Class="MiniWarehouseDashboard.Views.MainPage"
             x:DataType="viewmodel:DashboardViewModel"
             BackgroundColor="#0B1120">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        
        <!-- Modern Gradient Header with Glow -->
        <Border StrokeThickness="0" Padding="30,25" Margin="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#7C3AED" Offset="0.0" />
                    <GradientStop Color="#4F46E5" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Shadow>
                <Shadow Brush="#7C3AED" Offset="0,8" Radius="24" Opacity="0.5"/>
            </Border.Shadow>
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout>
                    <Label Text="Warehouse Dashboard" 
                           FontSize="34" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="Real-time inventory monitoring" 
                           FontSize="15" 
                           TextColor="#94A3B8"
                           Margin="0,6,0,0"/>
                </VerticalStackLayout>
                <Border Grid.Column="1" 
                        StrokeThickness="0"
                        Padding="16,10"
                        VerticalOptions="Center"
                        WidthRequest="190"
                        HeightRequest="90">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#10B981" Offset="0.0" />
                            <GradientStop Color="#059669" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#10B981" Offset="0,4" Radius="16" Opacity="0.4"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                        <Label Text="{Binding Items.Count}" 
                               FontSize="32" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Products in Stock" 
                               FontSize="12" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               LineBreakMode="NoWrap"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>

        <!-- Content with Cards -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,3*" ColumnSpacing="24" Padding="24,24,24,120">
            
            <!-- Left: Inventory Card -->
            <Border Grid.Column="0" 
                    BackgroundColor="#1E293B"
                    StrokeThickness="0"
                    Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,8" Radius="32" Opacity="0.4"/>
                </Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <Label Text="📦 Inventory List" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="#F1F5F9"
                           Margin="0,0,0,18"/>
                    <Border Grid.Row="1" 
                            BackgroundColor="#0F172A"
                            StrokeThickness="0"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <dxg:DataGridView ItemsSource="{Binding Items}" 
                                          AutoGenerateColumnsMode="None"
                                          BackgroundColor="#0F172A">
                            <dxg:DataGridView.Columns>
                                <dxg:TextColumn FieldName="Name" Caption="Product" Width="*"/>
                                <dxg:TextColumn FieldName="Category" Caption="Category" Width="150"/>
                                <dxg:NumberColumn FieldName="Quantity" Caption="Qty" Width="80"/>
                                <dxg:CheckBoxColumn FieldName="IsLowStock" Caption="Low" Width="70"/>
                            </dxg:DataGridView.Columns>
                        </dxg:DataGridView>
                    </Border>
                </Grid>
            </Border>

            <!-- Right: Chart Card -->
            <Border Grid.Column="1" 
                    BackgroundColor="#1E293B"
                    StrokeThickness="0"
                    Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,8" Radius="32" Opacity="0.4"/>
                </Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <Label Text="📊 Products with Highest Quantity" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="#F1F5F9"
                           Margin="0,0,0,18"/>
                    <dxc:ChartView Grid.Row="1" BackgroundColor="Transparent">
                        <dxc:ChartView.Series>
                            <dxc:BarSeries DisplayName="Quantity">
                                <dxc:BarSeries.Data>
                                    <dxc:SeriesDataAdapter DataSource="{Binding TopItems}"
                                                           ArgumentDataMember="Name">
                                        <dxc:ValueDataMember Type="Value" Member="Quantity"/>
                                    </dxc:SeriesDataAdapter>
                                </dxc:BarSeries.Data>
                            </dxc:BarSeries>
                        </dxc:ChartView.Series>
                    </dxc:ChartView>
                </Grid>
            </Border>
        </Grid>

        <!-- Floating Action Button (FAB) - Bottom Right -->
        <Border Grid.Row="1" 
                Margin="0,0,50,50"
                HorizontalOptions="End"
                VerticalOptions="End"
                StrokeThickness="0"
                Padding="0"
                WidthRequest="180"
                HeightRequest="56">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#7C3AED" Offset="0.0" />
                    <GradientStop Color="#4F46E5" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="#7C3AED" Offset="0,6" Radius="20" Opacity="0.6"/>
            </Border.Shadow>
            <Grid>
                <Button Text="🔄" 
                        Command="{Binding LoadDataCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="24"
                        FontAttributes="Bold"/>
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   Color="White"
                                   WidthRequest="24"
                                   HeightRequest="24"/>
            </Grid>
        </Border>

    </Grid>

</ContentPage>
