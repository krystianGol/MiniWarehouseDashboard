<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             xmlns:dxga="clr-namespace:DevExpress.Maui.Gauges;assembly=DevExpress.Maui.Gauges"
             xmlns:viewmodel="clr-namespace:MiniWarehouseDashboard.ViewModels"
             xmlns:local="clr-namespace:MiniWarehouseDashboard.Converters"
             x:Class="MiniWarehouseDashboard.Views.MainPage"
             x:DataType="viewmodel:DashboardViewModel"
             BackgroundColor="#0F172A">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        
        <!-- Modern Header with Gradient -->
        <Border StrokeThickness="0" Padding="30,20" Margin="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6366F1" Offset="0.0" />
                    <GradientStop Color="#8B5CF6" Offset="0.5" />
                    <GradientStop Color="#EC4899" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout>
                    <Label Text="Warehouse Dashboard" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="Real-time inventory monitoring" 
                           FontSize="14" 
                           TextColor="#E0E7FF"
                           Margin="0,5,0,0"/>
                </VerticalStackLayout>
                <Border Grid.Column="1" 
                        BackgroundColor="#FFFFFF20"
                        StrokeThickness="0"
                        Padding="15,10"
                        VerticalOptions="Center"
                        WidthRequest="120"
                        HeightRequest="60">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="{Binding Items.Count}" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Total Items" 
                               FontSize="11" 
                               TextColor="#E0E7FF"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>

        <!-- Content with Cards -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,3*" ColumnSpacing="20" Padding="20">
            
            <!-- Left: Inventory Card -->
            <Border Grid.Column="0" 
                    BackgroundColor="#1E293B"
                    StrokeThickness="0"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
                </Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <Label Text="📦 Inventory List" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#F1F5F9"
                           Margin="0,0,0,15"/>
                    <Border Grid.Row="1" 
                            BackgroundColor="#0F172A"
                            StrokeThickness="0"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <dxg:DataGridView ItemsSource="{Binding Items}" 
                                          AutoGenerateColumnsMode="None"
                                          BackgroundColor="#0F172A">
                            <dxg:DataGridView.Columns>
                                <dxg:TextColumn FieldName="Name" Caption="Product" Width="*"/>
                                <dxg:TextColumn FieldName="Category" Caption="Category" Width="150"/>
                                <dxg:NumberColumn FieldName="Quantity" Caption="Qty" Width="80"/>
                                <dxg:CheckBoxColumn FieldName="IsLowStock" Caption="Low" Width="70"/>
                            </dxg:DataGridView.Columns>
                        </dxg:DataGridView>
                    </Border>
                </Grid>
            </Border>

            <!-- Right: Chart Card -->
            <Border Grid.Column="1" 
                    BackgroundColor="#1E293B"
                    StrokeThickness="0"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
                </Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <Label Text="📊 Top 5 Products" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#F1F5F9"
                           Margin="0,0,0,15"/>
                    <dxc:ChartView Grid.Row="1" BackgroundColor="#0F172A">
                        <dxc:ChartView.Series>
                            <dxc:BarSeries DisplayName="Quantity">
                                <dxc:BarSeries.Data>
                                    <dxc:SeriesDataAdapter DataSource="{Binding TopItems}"
                                                           ArgumentDataMember="Name">
                                        <dxc:ValueDataMember Type="Value" Member="Quantity"/>
                                    </dxc:SeriesDataAdapter>
                                </dxc:BarSeries.Data>
                            </dxc:BarSeries>
                        </dxc:ChartView.Series>
                    </dxc:ChartView>
                </Grid>
            </Border>
        </Grid>

        <!-- Modern Refresh Button -->
        <Border Grid.Row="2" 
                Margin="20,0,20,20"
                StrokeThickness="0"
                Padding="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#6366F1" Offset="0.0" />
                    <GradientStop Color="#8B5CF6" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Shadow>
                <Shadow Brush="#6366F1" Offset="0,4" Radius="12" Opacity="0.4"/>
            </Border.Shadow>
            <Button Text="🔄 Refresh Data" 
                    Command="{Binding LoadDataCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"/>
        </Border>
        
        <ActivityIndicator Grid.RowSpan="3" 
                           IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           Color="#8B5CF6"
                           WidthRequest="60"
                           HeightRequest="60"/>

    </Grid>

</ContentPage>
